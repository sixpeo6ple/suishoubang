
page{
	width: 100%;
	background-color: rgb(228, 236, 241);
}
.block{
	width: 95%;
	height: 90px;
	margin: auto;
	margin-top: 20px;
	background-color: #F1F1F1;
	border-radius: 10px;
	border-style: solid;
	border-width: 0.1mm;
	border-color: rgb(119, 118, 68);
	display: flex;
}
.loading{
	display: block;
	text-align: center;
}
.text{
	display: flex;
	flex-direction: column;
	margin-top: 10px;
	margin-left: auto;
	font-size: 15px;
}
.pic1{
	margin-left: auto;
	margin-right: 20px;
}
.pic2{
	margin-left: 10px;
	margin-right: auto;
}
.pic{
	margin-top: 10px;
	height: 70px;
	width: 70px;
}
.picc{
	border-radius: 50%;
	margin-top: 10px;
	height: 40px;
	width: 40px;
}

